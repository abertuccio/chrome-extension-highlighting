{
    "manifest_version": 2,
    "name": "Hightlighting",
    "version": "0.1",
    "default_locale": "en",
    "browser_action": {
      "default_icon": "pencil_64.png",
      "default_popup": "popup.html"
    },
    "permissions": ["storage","activeTab", "tabs", "https://*/", "http://*/"],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"],
        "all_frames": true
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }