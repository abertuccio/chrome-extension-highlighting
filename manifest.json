{
  "manifest_version": 2,
  "name": "Hightlighting",
  "version": "0.1",
  "default_locale": "en",
  "browser_action": {
    "default_icon": "pencil_64.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "https://*/",
    "http://*/"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/highligter/highlighter.js",
        "content/mainContent.js"
      ],
      "css": [
        "content/highligter/hightlighter.css"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "https://translate.google.com/*"
      ],
      "js": [
        "content/translation/translation.js"
      ],
      "all_frames": true
    },
    {
      "matches": [
        "https://www.google.com/*"
      ],
      "js": [
        "content/imageSearch/imageSearch.js"
      ],
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "content/highligter/*"
  ],
  "background": {
    "scripts": [
      "background/settingsBackground.js",
      "background/background.js"
    ],
    "persistent": false
  }
} 