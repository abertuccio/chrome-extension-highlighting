{
    "manifest_version": 2,
    "name": "Hightlighting",
    "version": "0.1",
    "browser_action": {
      "default_icon": "icon.png",
      "default_popup": "popup.html"
    },
    "permissions": ["storage","activeTab", "tabs"],
    "content_scripts": [
      {
        "matches": [
          "<all_urls>"
        ],
        "js": ["content.js"],
        "all_frames": true
      },
      {
        "matches": [
          "https://www.google.com/*"
        ],
        "js": ["imageSearch.js"],
        "all_frames": true
      },
      {
        "matches": [
          "https://www.wordreference.com/*"
        ],
        "js": ["translationSearch.js"],
        "all_frames": true
      }
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  }